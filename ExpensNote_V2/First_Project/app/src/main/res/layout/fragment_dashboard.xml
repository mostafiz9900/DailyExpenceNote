<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#37474F"
    tools:context=".DashboardFragment">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/spinner_back"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Expense Type"
                android:textSize="16sp"
                android:textColor="#2E0606"
                />

            <Spinner
                android:id="@+id/dBoardtypeSpinnerID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dashBoardFromDateTV"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="from Date"
            android:background="@drawable/textview_back_shape"
            android:padding="5dp"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/dashBoardfromDateCalenderBtn"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_date"
            android:layout_marginRight="50dp"
            />

        <TextView
            android:id="@+id/dashBoardtoDateTV"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="to Date"
            android:background="@drawable/textview_back_shape"
            android:padding="5dp"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/dashBoardtoDateCalenderBtn"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           app:srcCompat="@drawable/ic_date"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="60dp"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_gravity="center_horizontal|center_vertical"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/total_expense_circle_shape"
                android:gravity="center"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:background="@drawable/textview_back_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Expense"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/totalCostTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BDT 0"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    


</LinearLayout>